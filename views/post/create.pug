extends ../layout

block content
    .page-header
    h3 Submit a Post
    form.form-horizontal(action='/post/submit', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='title') Title
      .col-sm-7
        input.form-control(type='title', name='title', id='title')
    .form-group
      label.col-sm-3.control-label(for='body') Body
      .col-sm-7
        textarea.form-control(type='text', name='body', id='body')
    .form-group
      label.col-sm-3.control-label(for='author') Author
      .col-sm-7
        input.form-control(type='text', name='author', id='author')
    .form-group
      label.col-sm-3.control-label(for='groups') Groups
      .col-sm-7
        input.form-control(type='text', name='groups', id='groups')
    .form-group
      label.col-sm-3.control-label Tags
      .col-sm-4
        input.form-control(type='text', name='tags', id='tags')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-podcast
          | Submit
          